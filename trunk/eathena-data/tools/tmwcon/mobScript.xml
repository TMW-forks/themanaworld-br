<xml>

	<script id="callfunc_mobContagem">
	if(%return%) return;
	callfunc "mobContagem", %max%, %mobs%, %flag%;
	set %mobs%, @mobs;
	set %flag%, @flag;
	</script>

	<monstro id="1002" nome="Verme">
		<callsub label="_MOBS_verme">
			<gerar_label script="callfunc_mobContagem">
				<var id="%return%" valor="QUEST_praia!=7||QUEST_contamobs&lt;2"/>
				<var id="%max%" valor="17"/>
				<var id="%mobs%" valor="QUEST_contamobs"/>
				<var id="%flag%" valor="@QUEST_contamobs"/>
			</gerar_label>
		</callsub>
	</monstro>
