<?xml version="1.0" encoding="UTF-8"?>
<xml>

	<script id="callfunc_mobContagem">
	if(%return%) return;
	callfunc "mobContagem", %max%, %mobs%, %flag%;
	set %mobs%, @mobs;
	set %flag%, @flag;
	</script>

	<script id="script">// Um script setado com um id... %valor%...</script>

	<script></script>

	<monstro id="1018" nome="Trasgo Rosa">
		<script>//- maneira antiga:</script>
		<contagem
			callsub="_MOBS_trasgo_antigo"
			return="QUEST_trasgo!=8"
			max="35" var_mobs="MOBS_trasgo" var_flag="@MOBS_trasgo"
		/>
		<script>//- maneira nova:</script>
		<callsub label="_MOBS_trasgo">
			<gerar_label script="callfunc_mobContagem">
				<var id="%return%" valor="QUEST_trasgo!=8"/>
				<var id="%max%" valor="35"/>
				<var id="%mobs%" valor="MOBS_trasgo"/>
				<var id="%flag%" valor="@MOBS_trasgo"/>
			</gerar_label>
		</callsub>
	</monstro>

	<monstro id="1019" nome="?">
		<script>//- O mesmo label pode ser chamado por outro.</script>
		<script>//- Exemplo de uso: Pontos de monstro apenas para: 'Jack O', Morte e 'Dragão Verde'</script>
		<callsub label="_MOBS_trasgo" args="1, 2, 3"/>
		<script>//- Outra sugestão é chamar uma função:</script>
		<script>//- callfunc "mobPointsEspecial", 1, 2, 3;</script>
		<gerar_script script="script">
			<var id="%valor%" valor="(posso trocar %valor% por qualquer coisa)... %de novo%"/>
			<var id="%de novo%" valor="(posso vazer isso várias vezes)"/>
		</gerar_script>
	</monstro>

