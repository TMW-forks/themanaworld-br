<?xml version="1.0"?>

<effect>
	<particle
		position-x = "0"
		position-y = "0"
		position-z = "40"
		>
		<image>graphics/particles/beehive.png</image>
		<emitter>
			<property name="position-x" min="-5" max="5"/>
			<property name="position-y" min="-5" max="5"/>
			<property name="position-z" min="-5" max="5"/>
			<property name="output" min="0" max="1"/>
			<property name="horizontal-angle" min="0" max="360"/>
			<property name="vertical-angle" min="0" max="45"/>
			<property name="power" min="0.5" max="1.0"/>
			<property name="randomnes" value="400"/>
			<property name="acceleration" value="0.1"/>
			<property name="momentum" value="0.98"/>
			<property name="die-distance" value="3"/>
			<animation imageset="graphics/particles/bee.png" height="4" width="4">
				<sequence start="0" end="1" delay="50" />
			</animation>
		</emitter>
	</particle>
</effect>
