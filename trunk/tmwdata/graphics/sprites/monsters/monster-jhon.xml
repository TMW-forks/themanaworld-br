<?xml version="1.0"?>
<sprite>

	<imageset name="base" src="graphics/sprites/monsters/monster-jhon.png" width="55" height="52" />

	<action name="stand" imageset="base">
		<animation direction="down">
		  <frame index="22" />
		</animation>
		<animation direction="left">
		  <frame index="11" />
		</animation>
		<animation direction="up">
		  <frame index="33" />
		</animation>
		<animation direction="right">
		  <frame index="0" />
